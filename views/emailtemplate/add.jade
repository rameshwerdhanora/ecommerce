extends ../layout
block content
  .col-sm-9.midlle-bar
      .large-title-row
        img(src='/images/left-icon6.png', alt='icon')
        |  System
        .edit-btn-cl.select-item
          
            //select#select(name='select')
              option ACTIONS
      .customer-box.clearfix
        include left_menu
        script(type='text/javascript', src='/js/ckeditor/ckeditor.js')
        form(action='/emailtemplate/save', method='post', name='form3')
            .profile-cl
                .profile-top-row
                  h2 Add Template
                  .edit-btn-cl
                    input(type='submit', name='save', value='Save',class='save-btn')
                .profile-form-box
                  .profile-right-cl
                    form(action='', method='post')
                      .profile-frm-row
                        .profile-frm-cl1  Name
                        .profile-frm-cl2
                          input(name='name', type='text', value='',required='true')
                      .profile-frm-row
                        .profile-frm-cl1 Subject 
                        .profile-frm-cl2
                          input(name='subject', type='text', value='',required='true')
                      .profile-frm-row
                        .profile-frm-cl1 User
                        .profile-frm-cl2
                          .select-item
                            select#select(name='user_type')
                               option(value='customer') Customer
                               option(value='shop') Shop
                      .profile-frm-row
                        .profile-frm-cl1 Template Type
                        .profile-frm-cl2
                          .select-item
                            select#select(name='template_type')
                              -for(var i=0;i< emailTemplateType.length;i++){
                                 option(value='#{emailTemplateType[i].value}') #{emailTemplateType[i].lable}
                              -}
                      .profile-frm-row
                        .editer-box Email Content
                        .profile-frm-cl2.w610
                            textarea(name='content',id='editor')
                      .profile-frm-row
                        .profile-frm-cl1  Mobile Content
                        .profile-frm-cl2
                          textarea(name='mobile_content',id='mobile_content')
        script(type='text/javascript').
            $(document).ready(function(n){
                CKEDITOR.editorConfig = function( config ) {
                        config.language = 'es';
                        config.uiColor = '#F7B42C';
                        config.height = 200;
                        config.toolbarCanCollapse = 'auto';
                        config.width = true;
                };

                //var editorElement = CKEDITOR.document.getById( 'content' );
                CKEDITOR.replace('editor');
            });
            



