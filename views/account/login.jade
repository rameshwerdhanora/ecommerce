        form.form-signin(method='POST')
          input(type='hidden', name='_csrf', value=_csrf)
          .login-in
            h2.form-signin-heading Welcome
            .lgn-row
              input#inputEmail.form-control(type='email', name='email', placeholder='Email', autofocus)
            .lgn-row
              input#inputPassword.form-control(type='password', name='password', placeholder='Password')
