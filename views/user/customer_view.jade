extends ../layout
block content
  .col-sm-9.midlle-bar
    .large-title-row
      img(src='/images/title-icon.png', alt='icon')
      |  #{getCustomerDetails[0].first_name} #{getCustomerDetails[0].last_name}
    .righsub-nav.clearfix
      .left-sub
        ul
          li
            a(href='#')
              img(src='/images/sub-nav-arrow.png', alt='arrow')
          li
            a(href='/customer/list') Back
          li
            a(href='javascript:deleteCustomer("#{getCustomerDetails[0]._id}");') Delete USER 
          li
            a(href='/customer/changePassword/#{getCustomerDetails[0]._id}') Reset Password 
    .customer-box.clearfix
      .customer-cl
        include ../partials/customer_left_menu
      .profile-cl
        .profile-top-row
          h2 PROFILE
          .edit-btn-cl
            a.edit-btn(href='/customer/edit/#{getCustomerDetails[0]._id}/#{activeClass}') EDIT
        .profile-form-box
          .profile-left-cl
            img.profile-icons(src='/images/admin.png', alt='img')
          .profile-right-cl
            form(action='', method='post')
              .profile-frm-row
                .profile-frm-cl1 First Name
                .profile-frm-cl2
                  input(name='', type='text', value='#{getCustomerDetails[0].first_name}')
              .profile-frm-row
                .profile-frm-cl1 Last Name
                .profile-frm-cl2
                  input(name='', type='text', value='#{getCustomerDetails[0].last_name}')
              .profile-frm-row
                .profile-frm-cl1 Address
                .profile-frm-cl2
                  input(name='', type='text', value='1439 S. Rimhurst ave')
              .profile-frm-row
                .profile-frm-cl1 City
                .profile-frm-cl2
                  input(name='', type='text', value='Glendora')
              .profile-frm-row
                .profile-frm-cl1 State
                .profile-frm-cl2
                  input(name='', type='text', value='CA')
              .profile-frm-row
                .profile-frm-cl1 Zip Code 
                .profile-frm-cl2
                  input(name='', type='text', value='91740')
              .profile-frm-row
                .profile-frm-cl1 Country
                .profile-frm-cl2
                  input(name='', type='text', value='USA')
              .profile-frm-row
                .profile-frm-cl1 Bio
                .profile-frm-cl2
                  textarea.large-in
                    | #{getCustomerDetails[0].bio}
