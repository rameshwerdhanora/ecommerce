extends ../layout
block content
  .col-sm-9.midlle-bar
    include ../partials/flash
    .large-title-row
        img(src='/images/title-icon.png', alt='icon')
        |  #{getCustomerDetails.first_name} #{getCustomerDetails.last_name}
      .righsub-nav.clearfix
        include customer_top_bar
        //.right-sub
          a.save-btn(href='#') SAVE
      .customer-box.clearfix
        .customer-cl
            include ../partials/customer_left_menu
        .profile-cl
            .profile-top-row
              h2 LINKED ACCOUNTS
            .profile-form-box.linked
              p SHARED SETTINGS
              ul
                li
                  a(href='javascript:void(0);')
                    span
                      img(src='/images/facebook.png')
                    | #{getCustomerDetails.facebook}
                li
                  a(href='javascript:void(0);')
                    span
                      img(src='/images/instagram.png')
                    |  #{getCustomerDetails.instagram}
                li
                  a(href='javascript:void(0);')
                    span
                      img(src='/images/tumbler.png')
                    |  #{getCustomerDetails.tumblr}
                li
                  a(href='javascript:void(0);')
                    span
                      img(src='/images/pintrest.png')
                    |  #{getCustomerDetails.pinterest}
                li
                  a(href='javascript:void(0);')
                    span
                        img(src='/images/twitter.png')
                    |  #{getCustomerDetails.twitter}
