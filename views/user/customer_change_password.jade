extends ../layout
block content
  .col-sm-9.midlle-bar
    include ../partials/flash
    .large-title-row
      img(src='/images/title-icon.png', alt='icon')
      |  #{getCustomerDetails.first_name} #{getCustomerDetails.last_name}
    .righsub-nav.clearfix
      .left-sub
        ul
          li
            a(href='#')
              img(src='/images/sub-nav-arrow.png', alt='arrow')
          li
            a(href='/customer/list') Back
          li
            a(href='javascript:deleteCustomer("#{getCustomerDetails._id}");') Delete USER 
          li
            a(href='/customer/changePassword') Reset Password 
    .customer-box.clearfix
      .customer-cl
        include ../partials/customer_left_menu
      .profile-cl
        .profile-top-row
          h2 Account
        .profile-form-box
          .profile-right-cl
            form(action='/customer/changePasswordSave/#{getCustomerDetails._id}', method='post')
              .profile-frm-row
                .profile-frm-cl1 Password
                .profile-frm-cl2
                  input(name='password', type='text')
              .profile-frm-row
                .profile-frm-cl1 Confirm Password
                .profile-frm-cl2
                  input(name='confirmPassword', type='text')
              .profile-frm-row 
                .profile-frm-cl1   
                .profile-frm-cl2
                  button(type='submit') UPDATE
