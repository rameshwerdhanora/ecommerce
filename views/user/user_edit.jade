extends ../layout
block content
  .col-sm-9.midlle-bar
    .large-title-row
      img(src='/images/title-icon.png', alt='icon')
      |  #{getUserDetails.first_name} #{getUserDetails.last_name}
    form(action='/user/update', method='post')  
      .righsub-nav.clearfix
        .left-sub
          ul
            li
              a(href='#')
                img(src='/images/sub-nav-arrow.png', alt='arrow')
            li
              a(href='/user/view/#{getUserDetails._id}') Back
            li
              a(href='javascript:deleteUser("#{getUserDetails._id}");') Delete USER 
            li
              a(href='/user/changePassword/#{getUserDetails._id}') Reset Password 
            li
              a(href='#') Save and continue edit 
        .right-sub
          button(type='submit') SAVE
      .customer-box.clearfix
        .customer-cl
          include ../partials/user_left_menu
        .profile-cl
          .profile-top-row
            h2 SHOP PROFILE
          .profile-form-box
            .profile-right-cl
              form(action='', method='post')
                .profile-frm-row
                  .profile-frm-cl1
                    | Brand Name
                  .profile-frm-cl2
                    input(name='', type='text', value='#{getUserDetails.first_name} #{getUserDetails.last_name}')
                .profile-frm-row
                  .profile-frm-cl1 Address
                  .profile-frm-cl2
                    input(name='', type='text', value='')
                .profile-frm-row
                  .profile-frm-cl1 City
                  .profile-frm-cl2
                    input(name='', type='text', value='')
                .profile-frm-row
                  .profile-frm-cl1 State
                  .profile-frm-cl2
                    input(name='', type='text', value='')
                .profile-frm-row
                  .profile-frm-cl1 Zip Code 
                  .profile-frm-cl2
                    input(name='', type='text', value='')
                .profile-frm-row
                  .profile-frm-cl1 Country
                  .profile-frm-cl2
                    input(name='', type='text', value='')
                .profile-frm-row
                  .profile-frm-cl1 Bio
                  .profile-frm-cl2
                    textarea.large-in
                      | #{getUserDetails.bio}