extends ../layout
block content
  .col-sm-9.midlle-bar
    .large-title-row
      img(src='/images/title-icon.png', alt='icon')
      |  #{getCustomerDetails[0].first_name} #{getCustomerDetails[0].last_name}
    form(action='/customer/update', method='post')  
      .righsub-nav.clearfix
        .left-sub
          ul
            li
              a(href='#')
                img(src='/images/sub-nav-arrow.png', alt='arrow')
            li
              a(href='/customer/view/#{getCustomerDetails[0]._id}') Back
            li
              a(href='javascript:deleteCustomer("#{getCustomerDetails[0]._id}");') Delete USER 
            li
              a(href='#') Reset Password 
            li
              a(href='#') Save and continue edit 
        .right-sub
          button(type='submit') SAVE
      .customer-box.clearfix
        .customer-cl
          h2 CUSTOMER
          ul
            li
              a(href='#') Profile
            li
              a(href='#') Addresses
            li
              a(href='#') Payment Methods
            li
              a(href='#') Orders
            li
              a(href='#') Product Reviews
            li
              a(href='#') Account
            li
              a(href='#') Linked Accounts
            li
              a(href='#') Notifications
        .profile-cl
          .profile-top-row
            h2 PROFILE
          .profile-form-box
            .profile-left-cl
              img.profile-icons(src='/images/admin.png', alt='img')
            .profile-right-cl
              .profile-frm-row
                .profile-frm-cl1 First Name
                .profile-frm-cl2
                  input(name='first_name', type='text', value='#{getCustomerDetails[0].first_name}')
              .profile-frm-row
                .profile-frm-cl1
                  | Last Name
                .profile-frm-cl2
                  input(name='last_name', type='text', value='#{getCustomerDetails[0].last_name}')
              .profile-frm-row
                .profile-frm-cl1 Address
                .profile-frm-cl2
                  input(name='address', type='text', value='1439 S. Rimhurst ave')
              .profile-frm-row
                .profile-frm-cl1 City
                .profile-frm-cl2
                  input(name='city', type='text', value='Glendora')
              .profile-frm-row
                .profile-frm-cl1 State
                .profile-frm-cl2
                  input(name='state', type='text', value='CA')
              .profile-frm-row
                .profile-frm-cl1 Zip Code 
                .profile-frm-cl2
                  input(name='zip_code', type='text', value='91740')
              .profile-frm-row
                .profile-frm-cl1 Country
                .profile-frm-cl2
                  input(name='country', type='text', value='USA')
              .profile-frm-row
                .profile-frm-cl1 Bio
                .profile-frm-cl2
                  .in-div.large-in
                    | #{getCustomerDetails[0].bio}