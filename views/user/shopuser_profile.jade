extends ../layout
block content
  .col-sm-9.midlle-bar
    .large-title-row
      img(src='/images/title-icon.png', alt='icon')
      |  #{getCustomerDetails.first_name} #{getCustomerDetails.last_name}
      //include customer_top_bar
    .customer-box.clearfix
      .customer-cl
        include ../partials/shop_user_left_menu
      .profile-cl
        .profile-top-row
          h2 PROFILE
          .edit-btn-cl
            a.edit-btn(href='javascript:void(0);', onClick='javascript:$("#profile_up_Btn").show();') EDIT
        .profile-form-box
          .profile-left-cl
            img.profile-icons(src='/images/admin.png', alt='img')
          .profile-right-cl
            form(action='/user/shopuser_profile_update', method='post')
              .profile-frm-row
                .profile-frm-cl1 First Name
                .profile-frm-cl2
                  input(name='first_name', type='text', value='#{getCustomerDetails.first_name}')
              .profile-frm-row
                .profile-frm-cl1 Last Name
                .profile-frm-cl2
                  input(name='last_name', type='text', value='#{getCustomerDetails.last_name}')
              .profile-frm-row
                .profile-frm-cl1 Address
                .profile-frm-cl2
                  input(name='address_line1', type='text', value='#{fetchAddress.address_line1? fetchAddress.address_line1 : ""}')
              .profile-frm-row
                .profile-frm-cl1 City
                .profile-frm-cl2
                  input(name='city', type='text', value='#{fetchAddress.city ? fetchAddress.city : ""}')
              .profile-frm-row
                .profile-frm-cl1 State
                .profile-frm-cl2
                  input(name='state', type='text', value='#{fetchAddress.state ? fetchAddress.state : ""}')
              .profile-frm-row
                .profile-frm-cl1 Zip Code 
                .profile-frm-cl2
                  input(name='postal_code', type='text', value='#{fetchAddress.postal_code ? fetchAddress.postal_code : ""}')
              .profile-frm-row
                .profile-frm-cl1 Country
                .profile-frm-cl2
                  input(name='country', type='text', value='#{fetchAddress.country ? fetchAddress.country : ""}')
              .profile-frm-row
                .profile-frm-cl1 Bio
                .profile-frm-cl2
                  textarea.large-in(name='bio')
                    | #{getCustomerDetails.bio ? getCustomerDetails.bio : ""}
              .btn-btm
               button#profile_up_Btn.dnone(type='submit') Save
