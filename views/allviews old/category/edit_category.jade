extends ../layout

block content
  .page-header
    h3 Edit Category

    form(name='addCategory', action='/updatecategory', method='POST')
      table(cellpadding='0', cellspacing='0', width='100%')
        tr
          td Name
          td
            input.cat_name(type='text', name='name', value='#{fetchCategory.name}', required='required')
        tr
          td Description
          td
            textarea.description(name='description') #{fetchCategory.description}
        tr
          td Active
          td
            select.is_active(name="is_active")
             option(value='1' selected=(fetchCategory.description == '1')) Yes
             option(value='0' selected=(fetchCategory.description == '0')) No
        tr
          td(colspan='2')
            input(type='hidden' value='#{fetchCategory.user_id}' name='user_id')
            input(type='hidden' value='#{fetchCategory._id}' name='_id')
            a(href='/listofcategories') Cancel | 
            input.savecategory(type='submit', name='savecategory', value='Save Category')
           