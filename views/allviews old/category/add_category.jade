extends ../layout

block content
  .page-header
    h3 Add New Category

    form(name='addCategory', action='/savecategory', method='POST')
      table(cellpadding='0', cellspacing='0', width='100%')
        tr
          td Name
          td
            input.cat_name(type='text', name='name', value='', required='required')
        tr
          td Description
          td
            textarea.description(name='description')
        tr
          td Active
          td
            select.is_active(name="is_active")
             option(value='1') Yes
             option(value='0') No
        tr
          td(colspan='2')
            a(href='/listofcategories') Cancel | 
            input.savecategory(type='submit', name='savecategory', value='Save Category')
           