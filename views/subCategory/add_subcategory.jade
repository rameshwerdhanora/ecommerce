extends ../layout

block content
  .page-header
    h3 Add New Sub Category

    form(name='addSubCategory', action='/savesubcategory', method='POST')
      table(cellpadding='0', cellspacing='0', width='100%')
        tr
          td Name
          td
            input.cat_name(type='text', name='name', value='', required='required')
        tr
          td Description
          td
            textarea.description(name='description')
        tr
          td Parent Category
          td
            select.parent_cat(name='parent_id')
             option(value='0') Select Parent Category
             each getAllCategory in getAllCategories
              option(value='#{getAllCategory._id}') #{getAllCategory.name}
        tr
          td Active
          td
            select.is_active(name="is_active")
             option(value='1') Yes
             option(value='0') No
        tr
          td(colspan='2')
            a(href='/listofsubcategories') Cancel | 
            input.savesubcategory(type='submit', name='savesubcategory', value='Save Category')
           